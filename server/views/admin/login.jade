extends block/adminLayout
block content
    .login
        .login-panel
            .panel-heading
                h3.panel-title 登录
                    small 一些描述信息
            .panel-body
                form.login-form.js-login(role="form" method="post" action="/admin/login")
                    .form-group
                        input.form-control(placeholder="用户名" type="text" name="userName")
                    .form-group
                        input.form-control(placeholder="密码" type="text" name="userPassword")
                    button.btn.btn-block.btn-success(type="submit") 登录
