extends layout

block content

    // banner
    .article-title
        img(src='/upload/#{content.topPic}', alt='#{content.title}')
        .article-des
            // 内层
            .container
                .article-des-title
                    h1 #{content.title}
                    p
                        small
                            span.iconfont.icon-rili
                            em.js-date(date='#{content.date}')
                        small
                            span.iconfont.icon-discuss
                            em #{content.comments.length}
    // 主内容
    .container
        // 内容部分
        .article-con
            != content.body
            .clearfix
            hr
            .article-info.js-fixed
                .article-info-l
                    p
                        span.iconfont.icon-riqi
                        span.js-dateTime(date='#{content.date}')
                    if !!content.tags
                        p.article-tag
                            span.iconfont.icon-tag
                            each tag in content.tags.split(',')
                                if tag
                                    a(href='/tags/#{tag}') #{tag}
                    p.pull-right
                        a(href='#')
                            span.iconfont.icon-discuss
                            | #{content.comments.length}
                .article-info-r.js-prevNext(data-date='#{content.date}')
                    //p
                    //    if next.length !== 0
                    //        a(href='#{next[0]._id}' title="#{next[0].title}") 下一篇
                    //p
                    //    if prev.length !== 0
                    //        a(href='#{prev[0]._id}' title="#{prev[0].title}") 上一篇

        // 推荐部分
        .article-relate
            h3 相关推荐
            .article-relate-con
                .col-xs-4
                    a(href='#')
                        img(src='https://isux.tencent.com/wp-content/uploads/2016/03/20160303124431993.jpg', alt='标题标题')
