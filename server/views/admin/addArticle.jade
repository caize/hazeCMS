extends block/frame
block adminContent
    .admin-con
        h1.add-article-title 添加一篇文章
        hr
        form.form-horizontal.add-form.js-form-ajax(role='form' method='post' action='#')
            .form-group
                label.col-sm-2.control-label 文章标题
                .col-sm-5
                    input.form-control(type='text' name="title")
            .form-group
                label.col-sm-2.control-label 作者
                .col-sm-5
                    input.form-control(type='text' name='author')
            .form-group
                label.col-sm-2.control-label 主图
                .col-sm-5
                    input.form-control(type='file' name='topPic')
            .form-group
                label.col-sm-2.control-label 话题
                .col-sm-5
                    input.form-control(type='text' name='tags')
            .form-group
                label.col-sm-2.control-label
                .col-sm-10
                    textarea.form-control(name='body' rows='5')
            .form-group
                .col-sm-5.col-sm-offset-2
                    button.btn.btn-success(type='submit') 提交

        hr
        a.btn.btn-success(href="/users/site") 创建siteOption